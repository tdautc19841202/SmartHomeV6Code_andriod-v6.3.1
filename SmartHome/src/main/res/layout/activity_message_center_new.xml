<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newBackground"
    tools:context="cc.wulian.smarthomev6.main.message.MessageCenterNewActivity">

    <View
        android:id="@+id/view_back_alarm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_ripper_effect"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/message_center_text_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/message_center_item_text_Padding"
        android:text="@string/Message_Center_AlarmMessage"
        android:textColor="@color/black"
        android:textSize="@dimen/message_center_item_text_size"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_back_alarm"
        app:layout_constraintTop_toTopOf="@+id/view_back_alarm"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_back_alarm"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/message_center_item_image_Padding"
        android:layout_alignParentEnd="true"
        android:src="@drawable/system_intent_right"
        android:contentDescription="@string/Message_Center_AlarmMessage"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/view_back_alarm"
        app:layout_constraintBottom_toBottomOf="@+id/view_back_alarm"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/view_back_alarm"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"/>

    <View
        android:id="@+id/view_back_log"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_ripper_effect"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view_back_alarm"
        app:layout_constraintLeft_toLeftOf="@+id/view_back_alarm"/>

    <TextView
        android:id="@+id/message_center_text_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/message_center_item_text_Padding"
        android:text="@string/Message_Center_Log"
        android:textColor="@color/black"
        android:textSize="@dimen/message_center_item_text_size"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_back_log"
        app:layout_constraintTop_toTopOf="@+id/view_back_log"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_back_log"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/message_center_item_image_Padding"
        android:layout_alignParentEnd="true"
        android:src="@drawable/system_intent_right"
        android:contentDescription="@string/Message_Center_AlarmMessage"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view_back_log"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/view_back_log"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"/>

    <View
        android:id="@+id/view_log_node"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:visibility="invisible"
        android:background="@drawable/icon_point_secondry"
        app:layout_constraintRight_toLeftOf="@+id/imageView5"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>
