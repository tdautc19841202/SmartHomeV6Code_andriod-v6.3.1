<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/device_23_linear_match"
    tools:context="cc.wulian.smarthomev6.main.device.device_23.AirConditioning.AirConditioningMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/Infraredrelay_Match_Currentcode"
            android:textColor="@color/newPrimary"/>
        <TextView
            android:id="@+id/device_23_text_code_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            tools:text="T01245"
            android:textColor="@color/newPrimary"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/newBackground"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/device_23_text_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:enabled="false"
            android:drawableStart="@drawable/selector_device_23_arrow_prev"
            android:drawablePadding="8dp"
            android:text="@string/Infraredtransponder_Airconditioner_Previous"
            android:textColor="@drawable/selector_device_23_text_prep_next"/>

        <TextView
            android:id="@+id/device_23_text_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/selector_device_23_download"
            android:text="@string/Infraredtransponder_Airconditioner_Confirm"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/device_23_text_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/selector_device_23_arrow_next"
            android:drawablePadding="8dp"
            android:text="@string/Infraredtransponder_Airconditioner_Next"
            android:textColor="@drawable/selector_device_23_text_prep_next"/>
    </RelativeLayout>
</LinearLayout>
