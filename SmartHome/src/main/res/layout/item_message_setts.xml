<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/message_setts_image_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:padding="10dp"
        android:src="@drawable/icon_device_unknown" />

    <TextView
        android:id="@+id/message_setts_text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="设备哈哈" />

    <TextView
        android:id="@+id/message_setts_text_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:textColor="#96999e"
        android:textSize="14sp"
        tools:text="都开启了" />

    <ImageView
        android:id="@+id/iv_message_setting_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/system_intent_right" />

    <ToggleButton
        android:visibility="gone"
        android:id="@+id/tb_housekeeper"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_togglebutton"
        android:paddingRight="@dimen/default_padding_small"
        android:textOff=""
        android:textOn="" />

</LinearLayout>