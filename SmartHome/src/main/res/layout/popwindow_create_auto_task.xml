<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_button_height"
        android:gravity="center"
        android:text="@string/stewardIndex_create"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_normal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_padding_large"
        android:paddingLeft="@dimen/default_padding_large"
        android:paddingRight="@dimen/default_padding_large">

        <LinearLayout
            android:id="@+id/ll_auto_task_timer"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_auto_task_timer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_padding_small"
                android:gravity="center"
                android:text="@string/stewardIndex_time" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/ll_auto_task_scene"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_auto_task_scene" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_padding_small"
                android:gravity="center"
                android:text="@string/circumstances_tittle_1" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>