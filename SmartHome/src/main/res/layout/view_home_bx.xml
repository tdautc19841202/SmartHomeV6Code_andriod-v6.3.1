<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/widget_padding_vertical"
    android:orientation="vertical">

    <include layout="@layout/view_widget_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/widget_bm_frame_switch"
            android:layout_width="64dp"
            android:layout_height="64dp">
            <ImageView
                android:id="@+id/widget_bm_image_switch"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:padding="18dp"
                android:background="@drawable/selector_home_widget_bm_circle"
                android:src="@drawable/selector_home_widget_bm_switch" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/newPrimaryText"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textSize="@dimen/widget_secondary_text_size"
                android:text="@string/Device_Widget_Bm_Temperture1"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/widget_bm_image_room"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_widget_ap_error"/>
                <TextView
                    android:id="@+id/widget_bm_text_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lines="1"
                    android:text="25.0℃"
                    android:textColor="@color/newPrimaryText"
                    android:textSize="@dimen/widget_secondary_text_size"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="@color/newPrimaryText"
                android:textSize="@dimen/widget_secondary_text_size"
                android:text="@string/Device_Widget_Bm_Temperture2"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/widget_bm_image_surface"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_widget_ap_error"/>

                <TextView
                    android:id="@+id/widget_bm_text_surface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lines="1"
                    android:text="27.0℃"
                    android:textColor="@color/newPrimaryText"
                    android:textSize="@dimen/widget_secondary_text_size"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="@color/newPrimaryText"
                android:textSize="@dimen/widget_secondary_text_size"
                android:text="@string/Device_Widget_Bm_Set"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/widget_bm_image_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:src="@drawable/select_widget_bm_arrows_left"/>
                <TextView
                    android:id="@+id/widget_bm_text_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="27.0℃"
                    android:textColor="@color/newPrimaryText"
                    android:textSize="@dimen/widget_secondary_text_size"/>
                <ImageView
                    android:id="@+id/widget_bm_image_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:src="@drawable/select_widget_bm_arrows_right"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>