<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_wifi_conifg_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/default_margin_normal"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_config_wifi_success" />
        <TextView
            android:id="@+id/tv_config_wifi_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_wifi_conifg_success"
            android:gravity="center_horizontal"
            android:text="@string/WiFi_Config_Fail"
            android:textColor="@color/device_config_wifi_tips_color"
            android:textSize="15sp" />
        <TextView
            android:layout_marginTop="@dimen/default_padding_normal"
            android:id="@+id/tv_config_wifi_success_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="@dimen/default_padding_normal"
            android:paddingRight="@dimen/default_padding_normal"
            android:layout_below="@+id/tv_config_wifi_success"
            android:gravity="center_horizontal"
            android:textColor="@color/device_config_wifi_tips_color"
            android:textSize="15sp" />

        <Button
            style="@style/config_next_button"
            android:id="@+id/btn_next_step"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/config_device_btn_height"
            android:text="@string/Done" />


    </RelativeLayout>

</LinearLayout>