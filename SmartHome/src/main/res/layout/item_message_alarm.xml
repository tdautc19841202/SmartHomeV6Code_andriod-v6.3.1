<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_alarm_detail_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/item_alarm_detail_text_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:layout_alignStart="@+id/item_alarm_detail_text_date"
        android:layout_below="@+id/item_alarm_detail_text_date"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"/>

    <ImageView
        android:id="@+id/item_alarm_detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_alarm_detail_time_node"
        android:layout_alignBottom="@+id/item_alarm_detail_text_msg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"/>

    <View
        android:id="@+id/item_alarm_detail_line_bottom"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="#cecece"
        android:layout_below="@+id/item_alarm_detail_image"
        android:layout_marginStart="22dp"
        android:layout_alignBaseline="@+id/item_alarm_detail_image"/>

    <View
        android:id="@+id/item_alarm_detail_line_top"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="#cecece"
        android:layout_marginStart="22dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/item_alarm_detail_image"
        android:layout_alignBaseline="@+id/item_alarm_detail_image"/>

    <View
        android:id="@+id/item_alarm_detail_divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cecece"
        android:layout_alignStart="@+id/item_alarm_detail_text_msg"
        android:layout_below="@+id/item_alarm_detail_text_msg"
        android:layout_marginTop="15dp"/>
</RelativeLayout>