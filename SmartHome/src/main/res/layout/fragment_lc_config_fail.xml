<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_config_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/default_margin_normal"
        android:layout_marginTop="120dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_config_wifi_fail" />

    <TextView
        android:id="@+id/add_fail_tips"
        style="@style/config_wifi_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_config_fail"
        android:layout_marginLeft="@dimen/default_padding_small"
        android:layout_marginRight="@dimen/default_padding_small"
        android:gravity="center_horizontal"
        android:text="@string/add_deviceLC_failure"
        android:textColor="@color/device_config_wifi_tips_color" />



    <Button
        android:id="@+id/btn_retry"
        style="@style/config_next_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_padding_normal"
        android:text="@string/Common_Retry" />


</RelativeLayout>