<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/transparent">

    <View
        android:id="@+id/popup_edit_area_blank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_edit_scene_popup_bg">
        <TextView
            android:id="@+id/popup_edit_area_text_edit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:padding="10dp"
            android:textColor="@color/v6_popuup_text"
            android:gravity="center"
            android:text="@string/Area_Revice_Name"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/v6_line" />
        <TextView
            android:id="@+id/popup_edit_area_text_delete"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:padding="10dp"
            android:textColor="@color/v6_popuup_text"
            android:gravity="center"
            android:text="@string/Delete"/>
    </LinearLayout>

    <TextView
        android:id="@+id/popup_edit_area_text_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/shape_edit_scene_popup_bg"
        android:text="@string/Cancel"
        android:textColor="@color/scene_accent_text_color"/>
</LinearLayout>