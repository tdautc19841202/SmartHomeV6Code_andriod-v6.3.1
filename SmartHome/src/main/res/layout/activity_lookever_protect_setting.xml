<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_protect_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_setting_textview_height"
        android:layout_marginTop="@dimen/default_padding_normal"
        android:background="@color/white">

        <TextView
            style="@style/device_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_padding_normal"
            android:text="@string/Protective_Time" />

        <TextView
            android:id="@+id/tv_protect_time"
            style="@style/device_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/default_padding_small"
            android:layout_toLeftOf="@+id/iv_arrows"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/iv_arrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/default_padding_normal"
            android:background="@drawable/system_intent_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_protect_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_setting_textview_height"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            style="@style/device_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_padding_normal"
            android:text="@string/Protective_Area" />

        <TextView
            android:id="@+id/tv_protect_area"
            style="@style/device_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/default_padding_small"
            android:layout_toLeftOf="@+id/iv_arrows2"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/iv_arrows2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/default_padding_normal"
            android:background="@drawable/system_intent_right" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_sensitivity_move"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_setting_textview_height"
        android:layout_marginTop="@dimen/default_padding_normal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/device_setting_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_padding_normal"
            android:text="@string/Sensitivity" />

        <SeekBar
            android:id="@+id/sb_move"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:max="100"
            style="@style/SeekBar_mini"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:progress="50"></SeekBar>
    </LinearLayout>

    <Button
        android:id="@+id/btn_start_protect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/config_device_btn_height"
        android:layout_marginLeft="@dimen/default_padding_normal"
        android:layout_marginRight="@dimen/default_padding_normal"
        android:layout_marginTop="@dimen/default_padding_large"
        android:background="@color/v6_green"
        android:gravity="center"
        android:text="@string/Begin_Safety_Protection"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size" />

</LinearLayout>