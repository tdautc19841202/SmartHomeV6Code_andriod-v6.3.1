<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v6_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/config_device_btn_height"
        android:id="@+id/rl_pir_switch"
        android:layout_marginTop="@dimen/default_padding_normal">

        <TextView
            style="@style/device_setting_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/PIR_Switch" />

        <ToggleButton
            android:layout_margin="@dimen/default_padding_small"
            android:id="@+id/tb_pir_switch"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/default_padding_small"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_togglebutton"
            android:textOff=""
            android:textOn="" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_pir_sensitivity"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/config_device_btn_height"
        android:visibility="invisible"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/PIR_Sensitivity"
            style="@style/device_setting_text_left" />

        <TextView
            android:id="@+id/tv_sensitivity_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            style="@style/device_setting_text_right"
            android:layout_toLeftOf="@+id/iv_pir" />

        <ImageView
            android:id="@+id/iv_pir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_padding_normal"
            android:src="@drawable/system_intent_right" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/config_device_btn_height"
        android:id="@+id/rl_stay_time"
        android:visibility="invisible"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/Stay_Detection_Check"
            style="@style/device_setting_text_left" />

        <TextView
            android:id="@+id/tv_stay_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_stay" />

        <ImageView
            android:id="@+id/iv_stay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_padding_normal"
            android:src="@drawable/system_intent_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_record_type"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="@dimen/config_device_btn_height"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/Record_Type"
            style="@style/device_setting_text_left" />

        <TextView
            android:id="@+id/tv_record_type_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_linkage" />

        <ImageView
            android:id="@+id/iv_linkage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_padding_normal"
            android:src="@drawable/system_intent_right" />

    </RelativeLayout>


    <Button
        android:gravity="center"
        android:id="@+id/btn_start_protect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/config_device_btn_height"
        android:layout_marginLeft="@dimen/default_padding_normal"
        android:layout_marginRight="@dimen/default_padding_normal"
        android:layout_marginTop="40dp"
        android:background="@color/v6_green"
        android:text="@string/Save"
        android:textColor="@color/white"
        android:textSize="20sp" />


</LinearLayout>