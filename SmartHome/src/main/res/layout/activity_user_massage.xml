<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/v6_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="20dp"
        android:background="@color/v6_line" />

    <LinearLayout
        android:id="@+id/setting_manager_item_name_ly"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_ripper_effect">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/PersonalInfo_Avatar"
                android:textColor="@color/black"
                android:textSize="@dimen/mine_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center|right"
            android:orientation="horizontal">

            <cc.wulian.smarthomev6.support.customview.CircleImageView
                android:id="@+id/account_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_head"
                app:border_color="@color/transparent"
                app:border_width="1dp"/>

            <ImageView
                android:id="@+id/account_icon_arror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:src="@drawable/system_intent_right" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/v6_line" />

    <LinearLayout
        android:id="@+id/setting_manager_item_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_ripper_effect"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/PersonalInfo_Name"
            android:textColor="@color/black"
            android:textSize="@dimen/mine_text_size" />

        <TextView
            android:id="@+id/setting_manager_item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textSize="@dimen/read_agreement_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/v6_line" />

    <LinearLayout
        android:id="@+id/setting_manager_item_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_ripper_effect"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/AccountSecurity_PhoneNumber"
            android:textColor="@color/black"
            android:textSize="@dimen/mine_text_size" />

        <TextView
            android:id="@+id/setting_manager_item_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textSize="@dimen/read_agreement_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/v6_line" />

</LinearLayout>