<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newBackground"
    tools:context="cc.wulian.smarthomev6.main.message.setts.MessageSettingsDetailActivity">

    <View
        android:id="@+id/view_back_alarm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_ripper_effect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/message_settings_text_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/message_center_item_text_Padding"
        android:text="@string/Message_Center_AlarmMessage"
        android:textColor="@color/black"
        android:textSize="@dimen/message_center_item_text_size"
        app:layout_constraintLeft_toLeftOf="@+id/view_back_alarm"
        app:layout_constraintTop_toTopOf="@+id/view_back_alarm"
        app:layout_constraintBottom_toBottomOf="@+id/view_back_alarm"/>

    <ToggleButton
        android:id="@+id/message_settings_toggle_alarm"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/message_center_item_image_Padding"
        android:background="@android:color/transparent"
        android:button="@drawable/button_toggle_switch"
        android:checked="true"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintRight_toRightOf="@+id/view_back_alarm"
        app:layout_constraintBottom_toBottomOf="@+id/view_back_alarm"
        app:layout_constraintTop_toTopOf="@+id/view_back_alarm"/>

    <View
        android:id="@+id/view_back_log"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_ripper_effect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_back_alarm"/>

    <TextView
        android:id="@+id/message_settings_text_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/message_center_item_text_Padding"
        android:text="@string/Message_Center_Log"
        android:textColor="@color/black"
        android:textSize="@dimen/message_center_item_text_size"
        app:layout_constraintLeft_toLeftOf="@+id/view_back_log"
        app:layout_constraintTop_toTopOf="@+id/view_back_log"
        app:layout_constraintBottom_toBottomOf="@+id/view_back_log"/>

    <ToggleButton
        android:id="@+id/message_settings_toggle_log"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/message_center_item_image_Padding"
        android:background="@android:color/transparent"
        android:button="@drawable/button_toggle_switch"
        android:checked="true"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintRight_toRightOf="@+id/view_back_log"
        app:layout_constraintBottom_toBottomOf="@+id/view_back_log"
        app:layout_constraintTop_toTopOf="@+id/view_back_log"/>
</android.support.constraint.ConstraintLayout>
