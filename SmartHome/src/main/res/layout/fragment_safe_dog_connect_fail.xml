<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_config_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/default_margin_normal"
        android:layout_marginTop="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_config_wifi_fail" />

    <TextView
        android:id="@+id/add_fail_tips"
        style="@style/config_wifi_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_config_fail"
        android:layout_marginLeft="@dimen/default_padding_small"
        android:layout_marginRight="@dimen/default_padding_small"
        android:gravity="center_horizontal"
        android:text="@string/Cylincam_Add_Failed"
        android:textColor="@color/device_config_wifi_tips_color" />

    <LinearLayout
        android:layout_marginLeft="20sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:text="建议"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="1. 检查wifi密码是否正确"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="2. 检查添加的设备是否处于通电状态"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_retry"
        style="@style/config_next_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_padding_normal"
        android:text="@string/Cateyemini_Adddevice_Readd" />
</RelativeLayout>