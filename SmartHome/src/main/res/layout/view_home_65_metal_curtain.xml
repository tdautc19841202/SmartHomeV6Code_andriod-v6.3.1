<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/root_view"
    android:padding="15dp"
    android:orientation="vertical">

    <include layout="@layout/view_widget_title" />

    <LinearLayout
        android:layout_marginTop="@dimen/default_padding_normal"
        android:layout_marginBottom="@dimen/default_padding_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_turn_on"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:background="@drawable/home_widget_open" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_stop"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:background="@drawable/home_widget_stop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_turn_off"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:background="@drawable/home_widget_close" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>