<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="cc.wulian.smarthomev6.main.home.LockDialogActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_lock_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:text="@string/Device_DoorLock_Set_NickName_Tip"
            android:textSize="13sp"
            android:textColor="@color/newPrimaryText"/>

        <EditText
            android:id="@+id/edit_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/edittext_style"
            android:hint="@string/Mine_Input_NickName"
            android:paddingRight="10dp"
            android:padding="10dp"
            android:maxLines="1"
            android:inputType="text"
            android:textColor="@color/v6_text_dark"
            android:textColorHint="@color/v6_text_gray"
            android:textSize="12sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                style="@style/CMWidget.Button.Dialog.V6"
                android:background="@drawable/dialog_btn_left"
                android:text="@string/Cancel"
                android:textColor="#878787" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/newDivider"/>
            <Button
                android:id="@+id/sure"
                style="@style/CMWidget.Button.Dialog.V6"
                android:background="@drawable/dialog_btn_right"
                android:text="@string/Sure"
                android:textColor="@color/v6_text_green" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
