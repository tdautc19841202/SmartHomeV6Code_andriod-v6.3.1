<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_camera_guide_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/config_wifi_margin_top" />

        <TextView
            android:id="@+id/tv_config_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_camera_guide_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_padding_large"
            android:text="@string/Device_Default_Name_CMICA1"
            android:textColor="@color/v6_config_wifi_tips"
            android:textSize="26sp" />

        <TextView
            android:layout_marginLeft="@dimen/default_padding_normal"
            android:id="@+id/tv_camera_guide_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_config_tips"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_padding_small"
            android:text="@string/Config_Cateye_Guide_Tips"
            android:textColor="@color/device_config_wifi_tips_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_next_step"
            style="@style/config_next_button"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>