<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_recycleview"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/v6_bg"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_scene_area"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

        </android.support.v7.widget.RecyclerView>
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/all_scene_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/default_padding_small"
            android:overScrollMode="never" />


        <LinearLayout
            android:id="@+id/ll_no_scene_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/default_padding_large"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_no_scene" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding_small"
                android:gravity="center"
                android:text="@string/Home_Scene_NoScene2"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
