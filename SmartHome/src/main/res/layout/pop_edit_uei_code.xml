<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="10dp">

    <View
        android:id="@+id/popup_choose_portrait_blank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_edit_scene_popup_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_rename"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/Infraredrelay_Custom_Modifybuttonname"
            android:textColor="@color/v6_popuup_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/v6_line" />

        <TextView
            android:id="@+id/popup_delete_key"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/Infraredrelay_Custom_Deletebutton"
            android:textColor="@color/red" />
    </LinearLayout>

    <TextView
        android:id="@+id/popup_delete_uei_code_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_edit_scene_popup_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/Cancel"
        android:textColor="@color/scene_accent_text_color" />
</LinearLayout>