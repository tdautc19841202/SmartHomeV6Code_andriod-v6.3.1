<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_alarm_voice_mandarin"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/bg_ripper_effect">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/v6_line" />

    <ImageView
        android:id="@+id/icon_play_pause"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_play" />

    <TextView
        android:id="@+id/classification_language_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon_play_pause"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/Mandarin"
        android:textColor="@color/black"
        android:textSize="@dimen/mine_text_size" />

    <ImageView
        android:id="@+id/item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/theme_select"
        android:visibility="invisible" />
</RelativeLayout>