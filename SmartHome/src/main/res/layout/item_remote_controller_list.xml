<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/bg_ripper_effect"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/controller_image_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:src="@drawable/icon_device_unknown"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|left"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="10dp">

        <TextView
            android:id="@+id/controller_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/controller_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/v6_text_gray_light"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="14sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/controller_image_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/system_intent_right"
        android:layout_gravity="center_vertical"
        android:paddingRight="15dp"/>

</LinearLayout>