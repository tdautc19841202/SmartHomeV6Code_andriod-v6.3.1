<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/config_wifi_margin_top"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bind_show"
            style="@style/config_wifi_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_padding_normal"
            android:layout_marginStart="@dimen/default_padding_normal"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/Tips1_Already_Bind"
            android:textColor="@color/device_config_wifi_tips_color" />

        <TextView
            android:id="@+id/tv_bind_tips"
            style="@style/config_wifi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/Tips2_Already_Bind"
            android:textColor="@color/device_config_wifi_tips_color"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/default_margin_normal"
            android:src="@drawable/icon_cg22_bg" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bind_gateway_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_next_step"
        android:layout_marginBottom="@dimen/default_padding_normal"
        android:gravity="center"
        android:text="@string/Continue_Bind_Gateway"
        android:textColor="@color/device_config_wifi_tips_color"
        android:textSize="@dimen/default_text_size"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_next_step"
        style="@style/config_next_button"
        android:layout_alignParentBottom="true"
        android:text="@string/Sure" />

</RelativeLayout>