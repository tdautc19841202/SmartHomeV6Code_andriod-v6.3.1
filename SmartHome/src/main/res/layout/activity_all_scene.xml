<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_all_scene"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v6_bg"
    android:orientation="vertical"
    tools:context="cc.wulian.smarthomev6.main.home.scene.AllSceneActivity">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/scene_accent_text_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/all_scene_image_back"
            android:layout_width="@dimen/toolBar_icon_size"
            android:layout_height="@dimen/toolBar_icon_size"
            android:layout_marginStart="@dimen/toolBar_icon_margin_lr"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/icon_back" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_scene_text_title"
                style="@style/TextView.normal_a"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="all"
                android:text="@string/Home_Module_Scene"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <View
                android:id="@+id/line_all_scene"
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recommend_scene"
                style="@style/TextView.normal_a"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:tag="recommend"
                android:text="@string/houseKeeper_RecommendScene"
                android:textColor="@color/scene_text_unPressed"
                android:textSize="17sp" />

            <View
                android:id="@+id/line_recommend"
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <ImageView
            android:id="@+id/all_scene_image_sort"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolBar_icon_size"
            android:layout_marginEnd="@dimen/toolBar_icon_margin_lr"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/icon_order" />

        <ImageView
            android:id="@+id/all_scene_image_add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolBar_icon_size"
            android:layout_marginEnd="@dimen/toolBar_icon_margin_lr"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/icon_add" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/v6_bg" />

</LinearLayout>
