<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/item_alarm_detail_image"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/item_alarm_detail_text_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/item_alarm_detail_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignEnd="@+id/item_alarm_detail_text_msg"
        android:layout_toRightOf="@id/item_alarm_detail_image"
        android:lines="1"
        android:gravity="end"
        android:ellipsize="middle"
        android:layout_below="@+id/item_alarm_detail_text_msg"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/item_alarm_detail_text_img"
        android:layout_alignTop="@id/item_alarm_detail_image"
        android:layout_toLeftOf="@id/item_alarm_detail_text_msg"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/v6_line"/>
</RelativeLayout>