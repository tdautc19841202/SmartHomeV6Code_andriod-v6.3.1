<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/config_device_btn_height"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text_size" />
    <View
        android:background="@color/v6_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <cc.wulian.smarthomev6.support.customview.PBWebView
        android:id="@+id/wv_info"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <View
        android:background="@color/v6_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:background="@color/white"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/v6_green"
        android:id="@+id/bt_dialog_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/config_device_btn_height"
        android:text="@string/Sure" />

</LinearLayout>