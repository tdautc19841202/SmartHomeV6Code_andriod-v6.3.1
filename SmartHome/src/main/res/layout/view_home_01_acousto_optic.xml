<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/widget_padding_vertical"
    android:orientation="vertical">

    <include layout="@layout/view_widget_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/acousto_optic_linear_universal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/acousto_optic_image_universal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/icon_bell_nor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/Home_Widget_AlarmUniversal"
                android:textColor="@color/newSecondaryText"
                android:textSize="@dimen/widget_secondary_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/acousto_optic_linear_fire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/acousto_optic_image_fire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/icon_fire_nor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/Home_Widget_AlarmFire"
                android:textColor="@color/newSecondaryText"
                android:textSize="@dimen/widget_secondary_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/acousto_optic_linear_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/acousto_optic_image_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:src="@drawable/icon_stop_nor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/Home_Widget_StopAlarm"
                android:textColor="@color/newSecondaryText"
                android:textSize="@dimen/widget_secondary_text_size"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>