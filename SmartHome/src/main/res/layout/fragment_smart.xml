<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_smart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v6_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingTop="24dp">

        <ImageView
            android:id="@+id/iv_scene_setting"
            android:layout_width="@dimen/toolBar_icon_size"
            android:layout_height="@dimen/toolBar_icon_size"
            android:layout_marginStart="@dimen/toolBar_icon_margin_lr"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_scene_setting"
            android:visibility="visible" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_all_scene"
                style="@style/TextView.normal_a"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="all"
                android:text="@string/Home_Module_Scene"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <View
                android:id="@+id/line_all_scene"
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_houseKeeper"
                style="@style/TextView.normal_a"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:lines="1"
                android:tag="recommend"
                android:text="@string/Message_Log_houseKeeper"
                android:textColor="@color/scene_text_unPressed"
                android:textSize="17sp" />

            <View
                android:id="@+id/line_houseKeeper"
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:visibility="invisible" />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />


        <ImageView
            android:id="@+id/all_scene_image_add"
            android:layout_width="48dp"
            android:layout_height="@dimen/toolBar_icon_size"
            android:layout_marginEnd="@dimen/toolBar_icon_margin_lr"
            android:clickable="true"
            android:tag="scene"
            android:scaleType="center"
            android:src="@drawable/icon_add" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/v6_bg" />

</LinearLayout>
