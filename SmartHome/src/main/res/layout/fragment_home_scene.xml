<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/widget_padding_horizontal"
        android:paddingTop="@dimen/widget_padding_vertical"
        android:text="@string/Home_Module_Scene"
        android:textColor="@color/newPrimaryText"
        android:textSize="@dimen/widget_primary_text_size" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_padding_large"
            android:gravity="center"
            android:text="@string/Home_Scene_NoScene2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_scene_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/default_padding_small"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </FrameLayout>


</LinearLayout>