<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/widget_padding_vertical"
    android:paddingLeft="@dimen/widget_padding_horizontal"
    android:paddingRight="@dimen/widget_padding_horizontal"
    android:paddingTop="@dimen/widget_padding_vertical">

    <include layout="@layout/view_widget_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/widget_padding_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/fl_one"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/switch_image_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/home_widget_circle_gray"
                    android:padding="18dp"
                    android:src="@drawable/switch_off" />

                <cc.wulian.smarthomev6.support.customview.ProgressRing
                    android:id="@+id/switch_progress_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    app:ringEndColor="@color/colorPrimary"
                    app:ringStartColor="#F7FAF5"
                    app:ringWidth="1.5dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/textSwitchState_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_one"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/widget_door_open" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/fl_two"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/switch_image_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/home_widget_circle_gray"
                    android:padding="18dp"
                    android:src="@drawable/switch_off" />

                <cc.wulian.smarthomev6.support.customview.ProgressRing
                    android:id="@+id/switch_progress_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    app:ringEndColor="@color/colorPrimary"
                    app:ringStartColor="#F7FAF5"
                    app:ringWidth="1.5dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/textSwitchState_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_two"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/widget_door_open" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/fl_three"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/switch_image_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/home_widget_circle_gray"
                    android:padding="18dp"
                    android:src="@drawable/switch_off" />

                <cc.wulian.smarthomev6.support.customview.ProgressRing
                    android:id="@+id/switch_progress_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    app:ringEndColor="@color/colorPrimary"
                    app:ringStartColor="#F7FAF5"
                    app:ringWidth="1.5dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/textSwitchState_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_three"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/widget_door_open" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>