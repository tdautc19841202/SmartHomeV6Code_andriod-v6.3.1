<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_wifi_conifg_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/default_margin_normal"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_config_wifi_success" />

        <TextView
            android:id="@+id/tv_config_wifi_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_wifi_conifg_success"
            android:gravity="center_horizontal"
            android:text="@string/add_deviceLC_success"
            android:textColor="@color/device_config_wifi_tips_color"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/rl_device_wifi_config"
            android:layout_width="match_parent"
            android:layout_height="@dimen/scene_all_item_image_size"
            android:drawablePadding="@dimen/default_padding_normal"
            android:layout_below="@+id/tv_config_wifi_success"
            android:layout_marginTop="@dimen/tv_remote_round"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:background="@color/v6_line2"
                android:layout_alignParentTop="true"
                android:layout_height="1sp" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/config_wifi_text"
                android:text="@string/Infraredrelay_Custom_Buttonname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/config_default_padding" />

            <TextView
                android:id="@+id/tv_config_wifi_success_tips"
                android:text=""
                android:layout_marginLeft="@dimen/default_padding_normal"
                style="@style/device_setting_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/default_value_color"
                android:layout_marginRight="@dimen/config_default_padding"
                android:layout_toLeftOf="@+id/iv_arrows3"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/iv_arrows3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/config_default_padding"
                android:background="@drawable/system_intent_right" />

            <TextView
                android:layout_width="match_parent"
                android:background="@color/v6_line2"
                android:layout_alignParentBottom="true"
                android:layout_height="1sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_next_step"
            style="@style/config_next_button"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/config_device_btn_height"
            android:text="@string/Done" />


    </RelativeLayout>

</LinearLayout>