<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_model_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/default_padding_small"
            android:text="海尔4"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/choose_normal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_close"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_air_match_result"
                android:text="@string/IF_021"
                android:textColor="@color/gray"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_open"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_air_match_result"
                android:text="@string/IF_022"
                android:textColor="@color/gray"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_close_swing"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_air_match_result"
                android:text="@string/IF_024"
                android:textColor="@color/gray"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_open_swing"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_air_match_result"
                android:text="@string/IF_023"
                android:textColor="@color/gray"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>