<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_device_more_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_ripper_effect">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/v6_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/device_B9_normal_set"
            android:textColor="@color/black"
            android:textSize="@dimen/mine_text_size" />

        <TextView
            android:id="@+id/tv_input"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:layout_width="75dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_height="match_parent" />

        <CheckBox
            android:id="@+id/cb_input"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:button="@drawable/button_toggle_switch"
            android:checked="false" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/v6_bg"
        android:gravity="center_vertical"
        android:paddingBottom="2dp"
        android:paddingLeft="15dp"
        android:paddingTop="2dp"
        android:text="@string/device_A2_normal_set_hint" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/v6_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_item_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_output_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/device_B9_initial_action"
            android:textColor="@color/black"
            android:textSize="@dimen/mine_text_size" />

        <TextView
            android:id="@+id/tv_output"
            android:gravity="center_vertical|right"
            android:paddingRight="5dp"
            android:layout_width="75dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_height="match_parent" />

        <CheckBox
            android:id="@+id/cb_output"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:button="@drawable/button_toggle_switch"
            android:checked="false" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/v6_bg"
        android:gravity="center_vertical"
        android:paddingBottom="2dp"
        android:paddingLeft="15dp"
        android:paddingTop="2dp"
        android:text="@string/device_A2_initial_action_hint" />


</LinearLayout>
