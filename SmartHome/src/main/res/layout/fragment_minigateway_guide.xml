<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mini_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_large"
            android:gravity="center_horizontal"
            android:text="@string/Minigateway_Adddevice_Welcome"
            android:textColor="#454749"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:src="@drawable/icon_mini_gateway_guide" />

        <TextView
            android:id="@+id/tv_mini_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_padding_large"
            android:layout_marginRight="@dimen/default_padding_large"
            android:layout_marginTop="60dp"
            android:text="@string/Minigateway_Adddevice_Explain"
            android:textColor="#454749"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_next_step"
            style="@style/config_next_button"
            android:text="@string/Config_Next_Step" />
    </LinearLayout>


</LinearLayout>