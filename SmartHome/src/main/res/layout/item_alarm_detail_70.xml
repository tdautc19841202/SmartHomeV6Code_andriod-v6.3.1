<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_alarm_detail_image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/icon_phone"
        android:layout_marginStart="16dp"
        android:layout_above="@+id/item_alarm_detail_divider"
        android:layout_toEndOf="@+id/item_alarm_detail_image" />
    <TextView
        android:id="@+id/item_alarm_detail_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10:50"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/item_alarm_detail_image_icon" />

    <TextView
        android:id="@+id/item_alarm_detail_text_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:layout_alignStart="@+id/item_alarm_detail_text_date"
        android:layout_below="@+id/item_alarm_detail_text_date"
        android:layout_marginTop="5dp"
        tools:text="指纹开锁"/>

    <TextView
        android:id="@+id/item_alarm_detail_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="zz"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@+id/item_alarm_detail_text_msg"
        android:layout_toEndOf="@+id/item_alarm_detail_text_msg"/>

    <TextView
        android:id="@+id/item_alarm_detail_text_set_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:lines="1"
        android:ellipsize="end"
        android:text="@string/Message_Center_Set_NickName"
        android:textColor="@color/colorPrimary"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/item_alarm_detail_text_name"
        android:layout_toEndOf="@+id/item_alarm_detail_text_name"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/item_alarm_detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_alarm_detail_time_node"
        android:layout_alignBottom="@+id/item_alarm_detail_text_msg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"/>

    <View
        android:id="@+id/item_alarm_detail_line_bottom"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="#cecece"
        android:layout_below="@+id/item_alarm_detail_image"
        android:layout_marginStart="22dp"
        android:layout_alignBaseline="@+id/item_alarm_detail_image"/>

    <View
        android:id="@+id/item_alarm_detail_line_top"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="#cecece"
        android:layout_marginStart="22dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/item_alarm_detail_image"
        android:layout_alignBaseline="@+id/item_alarm_detail_image"/>

    <View
        android:id="@+id/item_alarm_detail_divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#cecece"
        android:layout_alignStart="@+id/item_alarm_detail_text_msg"
        android:layout_below="@+id/item_alarm_detail_text_msg"
        android:layout_marginTop="15dp"/>
</RelativeLayout>