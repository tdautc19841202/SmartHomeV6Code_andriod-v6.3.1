<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v6_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_padding_large"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_padding_small"
            android:gravity="center"
            android:textColor="@color/v6_text_gray"
            android:textSize="13sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_about_us_introduction"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_ripper_effect">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/v6_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/Mine_About_Introduce"
            android:textColor="@color/black"
            android:textSize="@dimen/mine_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/system_intent_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_about_us_about"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_ripper_effect">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/v6_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/Mine_About_About_Wulian"
            android:textColor="@color/black"
            android:textSize="@dimen/mine_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/system_intent_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/v6_line" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_official_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_official_wechat"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_ripper_effect">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/v6_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="官方微信"
                android:textColor="@color/black"
                android:textSize="@dimen/mine_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="物联传感"
                android:textColor="@color/v6_text_gray"
                android:textIsSelectable="true"
                android:textSize="@dimen/mine_wl_text_size" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/item_official_douyin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_ripper_effect">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/v6_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="官方抖音"
                android:textColor="@color/black"
                android:textSize="@dimen/mine_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="786779954"
                android:textColor="@color/v6_text_gray"
                android:textIsSelectable="true"
                android:textSize="@dimen/mine_wl_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_official_web"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_ripper_effect">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/v6_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="官方网站"
                android:textColor="@color/black"
                android:textSize="@dimen/mine_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="www.wuliangroup.com"
                android:textColor="@color/v6_text_gray"
                android:textIsSelectable="true"
                android:textSize="@dimen/mine_wl_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_consumer_hotline"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_ripper_effect">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/v6_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="客服电话"
                android:textColor="@color/black"
                android:textSize="@dimen/mine_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="400-928-9228"
                android:textColor="@color/v6_text_gray"
                android:textIsSelectable="true"
                android:textSize="@dimen/mine_wl_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_official_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_ripper_effect">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/v6_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="公司邮箱"
                android:textColor="@color/black"
                android:textSize="@dimen/mine_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="support@wuliangroup.com"
                android:textColor="@color/v6_text_gray"
                android:textIsSelectable="true"
                android:textSize="@dimen/mine_wl_text_size" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>