<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="260dp"
        android:layout_height="@dimen/lock_button_size"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_lock_edit"
        android:gravity="center"
        android:inputType="numberPassword"
        android:maxLength="9"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="@string/GatewayChangePwd_NewPwd_Hint"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_number1"
            android:layout_width="@dimen/lock_button_size"
            android:layout_height="@dimen/lock_button_size"
            android:background="@drawable/shape_lock_edit"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_number2"
            android:layout_width="@dimen/lock_button_size"
            android:layout_height="@dimen/lock_button_size"
            android:background="@drawable/shape_lock_edit"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_number3"
            android:layout_width="@dimen/lock_button_size"
            android:layout_height="@dimen/lock_button_size"
            android:background="@drawable/shape_lock_edit"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_number4"
            android:layout_width="@dimen/lock_button_size"
            android:layout_height="@dimen/lock_button_size"
            android:background="@drawable/shape_lock_edit"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_number5"
            android:layout_width="@dimen/lock_button_size"
            android:layout_height="@dimen/lock_button_size"
            android:background="@drawable/shape_lock_edit"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_number6"
            android:layout_width="@dimen/lock_button_size"
            android:layout_height="@dimen/lock_button_size"
            android:background="@drawable/shape_lock_edit"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_number7"
            android:layout_width="@dimen/lock_button_size"
            android:layout_height="@dimen/lock_button_size"
            android:background="@drawable/shape_lock_edit"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_number8"
            android:layout_width="@dimen/lock_button_size"
            android:layout_height="@dimen/lock_button_size"
            android:background="@drawable/shape_lock_edit"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_number9"
            android:layout_width="@dimen/lock_button_size"
            android:layout_height="@dimen/lock_button_size"
            android:background="@drawable/shape_lock_edit"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_clear"
            android:layout_width="@dimen/lock_button_size"
            android:layout_height="@dimen/lock_button_size"
            android:background="@drawable/shape_lock_edit"
            android:gravity="center"
            android:text="C"
            android:textColor="#cacaca"
            android:textSize="28sp" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_number0"
            android:layout_width="@dimen/lock_button_size"
            android:layout_height="@dimen/lock_button_size"
            android:background="@drawable/shape_lock_edit"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_unlock"
            android:layout_width="@dimen/lock_button_size"
            android:layout_height="@dimen/lock_button_size"
            android:background="@drawable/shape_lock_edit"
            android:gravity="center"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_lock_open_nor" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_exit"
        android:layout_width="@dimen/lock_button_size"
        android:layout_height="@dimen/lock_button_size"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_lock_exit" />
</LinearLayout>