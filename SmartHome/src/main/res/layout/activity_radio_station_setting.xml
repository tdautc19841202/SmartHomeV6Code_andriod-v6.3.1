<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v6_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_common_broadcast"
        android:layout_width="match_parent"
        android:layout_height="@dimen/config_device_btn_height"
        android:layout_marginTop="@dimen/default_padding_normal"
        android:background="@color/white">

        <TextView
            style="@style/device_setting_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_padding_normal"
            android:text="@string/widget_Broadcast_set_common" />

        <ToggleButton
            android:id="@+id/tb_common_voice"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/default_padding_small"
            android:background="@drawable/selector_togglebutton"
            android:paddingRight="@dimen/default_padding_small"
            android:textOff=""
            android:textOn="" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_nowTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/config_device_btn_height"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            style="@style/device_setting_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_padding_normal"
            android:text="@string/widget_Broadcast_Whole_Point" />

        <TextView
            android:id="@+id/tv_zone_name"
            style="@style/device_setting_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_padding_small"
            android:layout_toLeftOf="@+id/iv"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/default_padding_normal"
            android:background="@drawable/system_intent_right" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="@string/Cateyemini_Humandetection_Volume"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/default_padding_normal"
            android:background="@drawable/icon_mute_on" />

        <SeekBar
            android:id="@+id/sb_voice"
            style="@style/SeekBar_mini_d8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:max="100"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:progress="50"></SeekBar>

       <TextView
           android:id="@+id/tv_voice_size"
           android:textColor="@color/black"
           android:text="70%"
           android:textSize="16sp"
           android:layout_marginRight="10dp"
           android:layout_gravity="right|center_vertical"
           android:gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>