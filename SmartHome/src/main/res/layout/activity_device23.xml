<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/newBackground"
             tools:context="cc.wulian.smarthomev6.main.device.device_23.Device23Activity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/newBackground">

        <ImageView
            android:id="@+id/device_23_image_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_uei_empty"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintVertical_bias="0.382"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/device_23_text_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Infraredrelay_List_Empty"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/device_23_image_empty"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/device_23_add"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/selector_device_23_add_cont"
            android:layout_margin="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/device_23_add"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/device_23_add"
            app:layout_constraintBottom_toBottomOf="@+id/device_23_add"
            android:layout_marginBottom="8dp"
            android:id="@+id/button"
            android:drawableStart="@drawable/icon_add_condi"
            android:drawablePadding="8dp"
            android:textColor="@color/white"
            android:text="@string/Home_Widget_Addremote"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/device_23_add"
            android:layout_marginTop="8dp"/>

        <android.support.v7.widget.RecyclerView
            android:visibility="visible"
            android:id="@+id/device_23_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/device_23_add"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022"/>
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/device_23_relative_offline"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B2000000">

        <ImageView
            android:id="@+id/device_23_image_off_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="144dp"
            android:src="@drawable/icon_device_offline"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Device_Offline"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/device_23_image_off_line"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
    </RelativeLayout>
</FrameLayout>

