<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/shape_edit_title_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_search"/>
        <TextView
            android:id="@+id/tv_search_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/Device_SearchDevice"
            android:gravity="center"
            android:textColor="@color/device_search_text_color"
            android:textSize="@dimen/search_text_size"
            android:layout_gravity="center"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_title_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shape_edit_title_bg"
        android:hint="@string/Device_SearchDevice"
        android:focusable="false"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textCursorDrawable="@null"
        android:drawableLeft="@drawable/icon_search"
        android:drawableEnd="@drawable/icon_delete"
        android:singleLine="true"
        android:textColor="@color/black"
        android:visibility="gone"/>


</RelativeLayout>