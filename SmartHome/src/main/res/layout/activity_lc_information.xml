<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v6_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="center"
        tools:background="@drawable/bg_cg24_info" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_normal"
            android:orientation="vertical">

            <LinearLayout
                android:paddingEnd="@dimen/default_padding_small"
                android:layout_width="match_parent"
                android:layout_height="@dimen/device_setting_textview_height"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/device_setting_text_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_padding_small"
                    android:text="@string/Cateyemini_Setup_Equipmenttype" />

                <TextView
                    android:id="@+id/tv_device_type"
                    style="@style/device_setting_text_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/default_padding_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/device_setting_textview_height"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/device_setting_text_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_padding_small"
                    android:text="@string/deviceLC_number" />

                <TextView
                    android:id="@+id/tv_device_number"
                    style="@style/device_setting_text_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    tools:text="50294D1024568"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_padding_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/device_setting_text_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_padding_small"
                    android:text="@string/deviceLC_version" />

                <TextView
                    android:id="@+id/tv_firmware_version"
                    style="@style/device_setting_text_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/default_padding_small" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_upgrade"
            style="@style/config_next_button"
            android:layout_alignParentBottom="true"
            android:text="@string/IF_003"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>