<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list >
            <item
                android:left="-1dp"
                android:right="-1dp"
                android:top="0dp"
                android:bottom="0dp">
                <shape
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shape="rectangle">
                    <solid android:color="@color/newPrimary"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/newPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list >
            <item
                android:left="-1dp"
                android:right="-1dp"
                android:top="0dp"
                android:bottom="0dp">
                <shape
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/newPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>