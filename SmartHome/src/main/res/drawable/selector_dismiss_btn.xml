<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content">

            <solid android:color="@color/v5_gray_dark" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/v6_green_dark" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content">

            <solid android:color="@color/white" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <stroke android:width="1dp" android:color="@color/v6_bg" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>