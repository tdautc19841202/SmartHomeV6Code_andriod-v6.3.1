<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/newPrimaryDark</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="LoginAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/v6_editText_hint_color</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppCompatMainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppCompatNoActionBarFullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppCompatNoActionBarFullScreenTranslucent" parent="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="QRTheme" parent="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TextView.normal_a" parent="@style/CommonTextLabel">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TextView.normal_r" parent="@style/CommonTextLabel">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- WLDialog样式 -->
    <style name="dialog_style_v5" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation_v6</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>


    <style name="dialog_animation_v6" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/left_in</item>
        <item name="android:windowExitAnimation">@anim/right_out</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="CMWidget.Button.Dialog.V6" parent="@android:style/Widget.Button">
        <item name="android:textColor">#719e19</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dialog_btn_height</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CommonTextLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/lightgrey</item>
        <item name="android:textColorHint">@color/password_hint_text_color</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_middle</item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle_middle</item>
        <item name="android:textSelectHandle">@drawable/text_select_handle_middle</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="customProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/social_edit_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="take_photo_anim" parent="android:Animation">
            
        <item name="android:windowEnterAnimation">@anim/pop_start_anim</item>
            
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="config_next_button" parent="android:Widget.Button">
        <item name="android:background">@drawable/shape_config_btn_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/config_device_btn_height</item>
        <item name="android:layout_marginLeft">@dimen/config_default_padding</item>
        <item name="android:layout_marginRight">@dimen/config_default_padding</item>
        <item name="android:layout_marginBottom">@dimen/config_device_btn_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="alertDialog" parent="@style/dialog"></style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="config_wifi_text" parent="android:Widget.TextView">
        <item name="android:textColor">@color/v6_config_wifi_tips</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="device_setting_text" parent="android:Widget.TextView">
        <item name="android:textColor">@color/device_setting_left_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="device_setting_text_left" parent="android:Widget.TextView">
        <item name="android:textColor">@color/device_setting_left_color</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="device_setting_text_right" parent="android:Widget.TextView">
        <item name="android:textColor">@color/device_setting_right_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="device_setting_item" parent="android:Widget.TextView">
        <item name="android:layout_height">@dimen/device_setting_textview_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LockDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seek_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/seek_progressbar</item>
        <item name="android:minHeight">2dip</item>
        <item name="android:maxHeight">2dip</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="SeekBar_mini" parent="@style/SeekBar">
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:progressDrawable">@drawable/seek_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/seek_progressbar</item>
    </style>

    <style name="SeekBar_mini_d8" parent="@style/SeekBar">
        <item name="android:thumb">@drawable/mini_seek_thumb</item>
        <item name="android:progressDrawable">@drawable/seek_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/seek_progressbar</item>
    </style>

    <style name="SeekBar_Be_Regulate" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seek_progressbar_yellow</item>
        <item name="android:indeterminateDrawable">@drawable/seek_progressbar_yellow</item>
        <item name="android:minHeight">6dip</item>
        <item name="android:maxHeight">6dip</item>
        <item name="android:thumb">@drawable/icon_seek_point</item>
        <item name="android:thumbOffset">12dip</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="AppThemeForAirConditioning" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#54bf00</item>
        <item name="colorPrimaryDark">#54bf00</item>
        <item name="colorAccent">@color/newPrimaryDark</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextStyle" parent="LoginAppTheme">
        <item name="colorControlNormal">@color/register_btn_bg</item>
        <item name="colorControlActivated">@color/v6_editText_hint_color</item>
    </style>

    <style name="TestButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_start_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_show_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pop_dismiss_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
    <style name="pop_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowExitAnimation">@anim/pop_dismiss</item>
    </style>
</resources>
